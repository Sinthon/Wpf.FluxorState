<UserControl x:Class="Wpf.FluxorState.Views.Components.WeatherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.FluxorState.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Fetch Weather" Command="{Binding FetchWeatherCommand}" />

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"/>

            <ListBox ItemsSource="{Binding Forecasts}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Date}" Width="100"/>
                            <TextBlock Text="{Binding TemperatureC}" Width="50"/>
                            <TextBlock Text="{Binding Summary}" Width="200"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
